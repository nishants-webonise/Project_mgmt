<div id="modal_user" class="modal hide fade in modal-dialog" aria-hidden="true" style = "display: none; ">
  <div class="modal-header modal-dialog-title modal-dialog-title-draggable">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Add Users</h3>
  </div>

  <div class="modal-body modal-dialog-content">
    <div id="add-story-dialog">

      <%= form_tag save_project_users_project_path(@project), :method => :post ,:html => { :class => "form-horizontal"} do %>

          <%#= select_tag "user", options_from_collection_for_select(@users, "id", "username"), :prompt => "Select someone" %>
          <table>

            <% @users.each do |user| %>
                <tr><td>
                  <%= check_box_tag 'user_ids[]', user.id %>
                  <%= user.username %>
                </td></tr>
            <% end %>

          </table>

          <div class="modal-footer modal-dialog-buttons">

            <%= submit_tag 'Add', :class => "btn" %>
            <%= link_to 'Cancel', '#', "data-dismiss" => "modal", :class => "btn" %>

          </div>
      <%end%>
    </div>
  </div>

</div>
