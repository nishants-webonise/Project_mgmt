<div id="modal_story" class="modal hide fade in" aria-hidden="true" style = "display: none; ">
  <div class="modal-header modal-dialog-title modal-dialog-title-draggable">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Add Story</h3>
  </div>

  <div class="modal-body">
    <%= form_for @story, :url =>'user_project_stories_path', :html => { :class => 'form-horizontal' } do |f| %>
        <div class="control-group">
          <%= f.label :story_name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :story_name, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :story_description, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :story_description, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :story_status, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :story_status, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :story_priority, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :story_priority, :class => 'text_field' %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :project_id, :class => 'control-label' %>
          <div class="controls">
            <%= f.number_field :project_id, :class => 'number_field' %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.submit nil, :class => 'btn btn-primary' %>
          <%#= link_to t('.cancel', :default => t("helpers.links.cancel")),
                stories_path, :class => 'btn' %>
        </div>
    <% end %>

  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >Close</a>
  </div>
</div>