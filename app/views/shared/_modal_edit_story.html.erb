<div id="editmodal_story" class="modal hide fade in modal-dialog" aria-hidden="true" style = "display: none; ">
  <div class="modal-header modal-dialog-title modal-dialog-title-draggable">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Update Story</h3>
  </div>

  <div class="modal-body modal-dialog-content">
    <div id="add-story-dialog">
      <%= form_for @story, :url => user_project_story_path(@user, @project), :method => :put, :html => { :class => 'form-horizontal'} do |f| %>
          <div class="control-group">
            <%= f.label :story_name, "Title", :class => 'control-label' %>
            <div class="controls">
              <%= f.text_field :story_name, :class => 'text_field' %>
            </div>
          </div>
          <div class="control-group">
            <%= f.label :story_description, "Description", :class => 'control-label' %>
            <div class="controls">
              <%= f.text_area(:story_description, :size => '30x10') %>
            </div>
          </div>

          <div class="modal-footer modal-dialog-buttons">
            <!--<a href="#" class="btn" data-dismiss="modal" >Cancel</a>-->
            <!--<a href="#" class="btn" data-dismiss="modal" >Save</a>-->

            <%= link_to 'Cancel', '#', "data-dismiss" => "modal", :class => "btn" %>
            <%= f.submit 'Update', :class => "btn" %>
          </div>

      <% end %>
    </div>
  </div>

</div>