<div id="modal_task" class="modal hide fade in modal-dialog-task" aria-hidden="true" style = "display: none; ">
  <div class="modal-header modal-dialog-title modal-dialog-title-draggable">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Add Task</h3>
  </div>

  <div class="modal-body modal-dialog-content">
    <div id="add-story-dialog">
      <%= form_for @task, :url => user_project_story_tasks_path(@user, @project, @story), :method => :post, :html => { :class => 'form-horizontal'} do |f| %>
          <div class="control-group">
            <%= f.label :task_description, "Task", :class => 'control-label' %>
            <div class="controls">
              <%= f.text_area(:task_description, :size => '30x10') %>
            </div>
          </div>

          <div class="modal-footer modal-dialog-buttons">
            <!--<a href="#" class="btn" data-dismiss="modal" >Cancel</a>-->
            <!--<a href="#" class="btn" data-dismiss="modal" >Save</a>-->
            <%= f.submit 'Ok', :class => "btn" %>
            <%= link_to 'Cancel', '#', "data-dismiss" => "modal", :class => "btn" %>

          </div>

      <% end %>
    </div>
  </div>

</div>