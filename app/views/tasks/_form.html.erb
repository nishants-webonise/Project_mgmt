<%= form_for @task, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :task_description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :task_description, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :task_status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :task_status, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :task_priority, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :task_priority, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :story_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :story_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn' %>
  </div>
<% end %>
