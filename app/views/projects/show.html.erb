<div style="-webkit-border-radius: 4px; -moz-border-radius: 4px" id="page">

  <div id="breadcrumb-bar">

    <div style="margin: 3px 10px">

      <b>User Dashboard</b>
      <img width="8" height="9" style="opacity: .3; position: relative; top: 1px; margin: 0px 4px" src="https://d1zvd2d754ag59.cloudfront.net/img/icon_triangle.gif">
      <b>User : <%= @user.username.capitalize %></b>
      <img width="8" height="9" style="opacity: .3; position: relative; top: 1px; margin: 0px 4px" src="https://d1zvd2d754ag59.cloudfront.net/img/icon_triangle.gif">
      <b>Project : <%= @project.project_name %></b>

    </div>
  </div>


  <div id="site-content">

    <h2>Project: <%= @project.project_name %></h2>

    <div>
      <ul id="project-tabs">
        <li>
          <a href="/users/<%= @user.id %>/projects/<%= @project.id %>">Project</a>
        </li>
        <li class="sel">
          <a href="/users/<%= @user.id %>/projects/<%= @project.id %>/stories">Stories</a>
        </li>
      </ul>
      <div>

        <div style="margin-bottom: 0" class="tbar">

          <!--<button id="add-story-button" class="clean">-->
          <!--<img width="16" height="16" src="https://dqrycuzv8h2ib.cloudfront.net/img/script_add.png">-->
          <!--Add Story-->
          <%= link_to 'Add Story', new_user_project_story_path(@user, @project), :method => :get, "data-toggle" => "modal", :id => "add-story-button", :class => "btn clean", :remote => true %>


          <%= link_to 'Add User', add_project_users_project_path(@project), :method => :get, "data-toggle" => "modal", :id => "add-story-button", :class => "btn clean", :remote => true %>
          <!--</button>-->


          <div id="story_div">

          </div>

          <div id="user_div">

          </div>
          <!--<button id="add-story-button" class="clean">-->
          <!--<img width="16" height="16" src="https://dqrycuzv8h2ib.cloudfront.net/img/script_add.png">-->
          <!--Add Story-->
          <!--</button>-->

        </div>

        <table width="100%" cellspacing="0" class="layout">
          <tbody><tr>
            <td width="170">
              <div style="padding-top: 20px">
                <div id="labels-section-wrapper">

                </div>
              </div>
            </td>
            <td width="15"></td>



            <td>

              <div id="filter-msg-wrapper">
                <div id="filter-msg"></div>

                <div>
                  <a href="#">Show all stories</a>
                </div>
              </div>

              <div id="stories" class="stories-allow-highlighting">


                <div style="font-size: 10px; color: #456; overflow: hidden" class="insert-iteration">
                  <div style="padding: 4px 0">
                    <a href="#" onclick="return false" id="insert-iteration-link-0" style="text-decoration: none" class="insert-iteration-link"></a>
                  </div>
                </div>


                <div id="iteration-0" class="iteration">
                  <div style="background: url(https://d1ayhg76ch0znm.cloudfront.net/img/green-grad.png); border: solid 1px #bfedd4" class="iteration-header">
                    <div style="float: left">Unscheduled Stories (Backlog)</div>
                  </div>

                  <div class="iteration-body">
                    <% if @stories.count > 0 %>

                        <% @stories.each do |story| %>

                        <div class="story-wrapper drag-source drag-target" style="display: block;">
                          <div style="position: relative; top: -1px" class="line-top">
                            <div>

                            </div>
                          </div>

                          <div id="story-<%= story.id %>" class="story" style="opacity: 1;">
                            <div title="Drag to move up or down in priority or into a label" class="story-grab">
                              <div id="story-<%= story.id %>-rank" class="story-rank"><%= @stories.index(story)+1 %></div>

                              <div style="margin-top: 27px">
                                <img width="6" height="14" style="vertical-align: text-top; margin: 2px" src="https://d1ayhg76ch0znm.cloudfront.net/img/grippy.png" class="story-draggable">
                              </div>
                            </div>

                            <div class="story-annotation">
                              <div class="item-num">
                                <a>
                                  <%= @stories.index(story)+1 %>
                                </a>
                              </div>

                              <div class="story-attachment">

                              </div>
                            </div>

                            <div class="story-main">
                              <div class="story-name-wrapper">
                                <!--<a class="story-name">-->
                                  <%#= story.story_name %>
                                  <%= link_to story.story_name, user_project_story_path(@user, @project, story.id), :class => 'story-name' %>
                                <!--</a>-->
                              </div>

                              <div class="story-description"><%= story.story_description %></div>
                            </div>


                          </div>
                          <div style="position: relative; top: 1px" class="line-bottom">
                            <div>

                            </div>
                          </div>
                        </div>

                        <% end %>

                      <% else %>
                    <div class="iteration-body-empty">

                      No stories. Drag stories here to un-scheduled them.

                    </div>
                       <% end %>
                  </div>
                </div>

              </div>

            </td>
          </tr>
          </tbody></table>

      </div>
    </div>

  </div>

</div>