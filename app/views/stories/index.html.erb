<%- model_class = Story -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:story_name) %></th>
      <th><%= model_class.human_attribute_name(:story_description) %></th>
      <!--<th><%#= model_class.human_attribute_name(:story_status) %></th>-->
      <!--<th><%#= model_class.human_attribute_name(:story_priority) %></th>-->
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= link_to story.id, user_project_stories_path(@user, @project,story) %></td>
        <td><%= story.story_name %></td>
        <td><%= story.story_description %></td>
        <!--<td><%#= story.story_status %></td>-->
        <!--<td><%#= story.story_priority %></td>-->
        <td><%= story.project_id %></td>
        <td><%=l story.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_project_story_path(@user, @project,story), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_project_story_path(@user, @project,story),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

