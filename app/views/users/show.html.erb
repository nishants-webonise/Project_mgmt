<%- model_class = User -%>

<div id="site-wrapper">
  <div id="site">
    <div id="breadcrumb-bar">
      <div style="margin: 1px 20px">

        <b>User Dashboard</b>
      </div>
    </div>
    <div id="site-content">

      <table width="100%" class="layout">
        <tbody><tr>
          <td>

            <h2>Hello, <%= @user.username.capitalize %> !</h2>


            <div id="welcome-wrapper">
              <div id="welcome">
                <h4>Welcome to Project Management System</h4>

                <div style="padding: 5px">

                  <p><b>To get started: </b></p>
                  <ul>
                    <li>
                      <h5>Create a project</h5>
                      <p>
                        Click the [New Project] button under your name (or company) or, if you
                        were invited to a project, just click on that project.
                      </p>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </td>

          <td width="40"></td>

          <td width="335">

            <div id="profile-tool">

              <table width="100%" class="layout" cellspacing="0">
                <tbody>
                <tr>
                  <td width="210">

                    <div style="padding: 2px; width: 200px;">
                      <table width="100%" class="layout" cellspacing="0">
                        <tbody>
                        <tr valign="top">
                          <td width="40">
                            <div style="padding: 3px">
                              <img width="32" height="32" src="assets/avatar.png">
                            </div>
                          </td>
                          <td width="8"></td>
                          <td>
                            <div style="font-size: 110%; font-weight: bold; margin: 3px 0 2px 0"><%= @user.username.capitalize %></div>
                            <div style="width: 180px; overflow: hidden; text-overflow: ellipsis; -o-text-overflow: ellipsis"><%= @user.email %></div>
                          </td>
                        </tr>
                        </tbody></table>
                    </div>

                  </td>
                </tr>
                </tbody></table>

            </div>

            <div class="project-container-header project-container-header-blue">
              <div class="project-container-header-left">
                <img class="icon" style="vertical-align: text-bottom" src="assets/user.png">
                <b>My Projects</b>
              </div>
              <div class="project-container-header-right">
                <%= link_to '+ New Project', new_project_user_projects_path(@user), :class => "btn btn-mini project-container-add" %>
              </div>
            </div>

            <div class="project-container-projects">
              <div class="project-container-project">
                <table width="100%" class="layout">
                  <tbody><tr>
                    <td>

                      <% @projects.each do |proj| %>
                      <tr><td>
                        <%= link_to proj.project_name, user_project_path(@user, proj.id) %>
                      </td></tr>
                  <% end %>

                  </td>
                  </tr>
                  </tbody></table>
              </div>

            </div>
          </td>
        </tr>
        </tbody></table>
    </div>

  </div>

</div>


